generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String             @id @default(uuid())
  createdAt        DateTime           @default(now())
  email            String             @unique
  password         String
  firstname        String
  lastname         String?
  role             Role?
  favorites        Favorite[]
  listeningHistory ListeningHistory[]
  playlists        Playlist[]
  recommendations  Recommendation[]
  tracks           Track[]            @relation("TrackToUser")
}

model Playlist {
  id         String         @id @default(uuid())
  createdAt  DateTime       @default(now())
  name       String
  userId     String
  access     PlaylistAccess @default(PRIVATE)
  coverPhoto String?
  user       User           @relation(fields: [userId], references: [id])
  Track      Track[]
}

model Track {
  id               String             @id @default(uuid())
  createdAt        DateTime           @default(now())
  title            String
  duration         Int
  albumId          String
  audioFilePath    String
  coverImagePath   String
  authorId         String?
  favorites        Favorite[]
  ListeningHistory ListeningHistory[]
  Lyric            Lyric[]
  Recommendation   Recommendation[]
  album            Album              @relation(fields: [albumId], references: [id])
  Playlist         Playlist[]
  users            User[]             @relation("TrackToUser")
}

model Album {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  title       String
  releaseDate DateTime
  artistId    String
  genreId     String
  coverUrl    String?
  artist      Artist   @relation(fields: [artistId], references: [id])
  genre       Genre    @relation(fields: [genreId], references: [id])
  tracks      Track[]
}

model Artist {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  name       String   @unique
  coverPhoto String?
  albums     Album[]
}

model Genre {
  id     String  @id @default(uuid())
  name   String  @unique
  albums Album[]
}

model Favorite {
  id      String @id @default(uuid())
  userId  String
  trackId String
  track   Track  @relation(fields: [trackId], references: [id])
  user    User   @relation(fields: [userId], references: [id])
}

model ListeningHistory {
  id         String   @id @default(uuid())
  userId     String
  trackId    String
  listenedAt DateTime @default(now())
  track      Track    @relation(fields: [trackId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Recommendation {
  id        Int      @id @default(autoincrement())
  userId    String
  trackId   String
  createdAt DateTime @default(now())
  track     Track    @relation(fields: [trackId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Lyric {
  id        String   @id @default(uuid())
  trackId   String
  text      String
  createdAt DateTime @default(now())
  timestamp Float
  updatedAt DateTime @updatedAt
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
}

enum Role {
  ADMIN
  USER
}

enum PlaylistAccess {
  PUBLIC
  PRIVATE
}
